<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/students/list">Students</a></li>
    <li class="breadcrumb-item active">Edit</li>
</ol>
<h1 class="display-4">Edit Student</h1>
<form method="post" action="/students/update/<%= student[0].id %>">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" value="<%= student[0].name %>" class="form-control">
    </div>
    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="email" name="email" value="<%= student[0].email %>" class="form-control">
    </div>
    <div class="form-group">
        <label for="course">Course</label>
        <input type="text" name="course" value="<%= student[0].course %>" class="form-control">
    </div>
    <div class="form-group">
        <label for="semester">Semester</label>
        <input type="number" name="semester" value="<%= student[0].semester %>" class="form-control">
    </div>
    <input type="submit" value="Submit" class="btn btn-primary">
</form>